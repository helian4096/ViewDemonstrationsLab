<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout_4"
    android:onClick="clickThrough">

    <View
        android:id="@+id/view_4_1"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:background="@color/top_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <View
        android:id="@+id/view_4_4"
        android:layout_height="150dp"
        android:layout_width="100dp"
        android:background="@color/top_left"
        app:layout_constraintRight_toLeftOf="@id/view_4_5"
        app:layout_constraintBottom_toBottomOf="@id/view_4_2" />

    <View
        android:id="@+id/view_4_3"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:id="@+id/view_4_5"
        android:layout_height="150dp"
        android:layout_width="200dp"
        android:background="@color/top_right"
        app:layout_constraintTop_toBottomOf="@id/view_4_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view_4_2"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@color/top_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>